{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "declaration": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "stripInternal": true,
        "outDir": "./dist",
        "rootDir": "./dist/inlined", //generated by 'inline-templates' task in gulpfile.js 
        "sourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true
    },
    "files": [
        "./dist/inlined/index.ts"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "demo",
        "config",
        "coverage",
        "src/**/*.spec.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "genDir": "./dist/waste"
    }
}